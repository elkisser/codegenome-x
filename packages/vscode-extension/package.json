{
  "name": "codegenome-x",
  "displayName": "CodeGenome X",
  "description": "Professional structural analysis engine for VS Code",
  "version": "1.0.0",
  "publisher": "CodeGenomeX",
  "repository": {
    "type": "git",
    "url": "https://github.com/codegenome-x/vscode-extension"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "code analysis",
    "structural analysis",
    "dead code",
    "impact analysis",
    "typescript",
    "react",
    "symfony"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codegenome.analyze",
    "onView:codegenomeExplorer"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codegenome.analyze",
        "title": "Analyze Project Structure",
        "category": "CodeGenome X"
      },
      {
        "command": "codegenome.simulate",
        "title": "Simulate Node Removal",
        "category": "CodeGenome X"
      },
      {
        "command": "codegenome.refresh",
        "title": "Refresh Analysis",
        "category": "CodeGenome X"
      },
      {
        "command": "codegenome.exploreNode",
        "title": "Explore Node",
        "category": "CodeGenome X"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "codegenomeExplorer",
          "name": "CodeGenome X"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codegenome.refresh",
          "when": "view == codegenomeExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "codegenome.simulate",
          "when": "view == codegenomeExplorer && viewItem == node",
          "group": "inline"
        },
        {
          "command": "codegenome.exploreNode",
          "when": "view == codegenomeExplorer && viewItem == node",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "CodeGenome X",
      "properties": {
        "codegenome.enableAutoAnalysis": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic analysis on file save"
        },
        "codegenome.maxWorkers": {
          "type": "number",
          "default": 4,
          "description": "Maximum number of worker threads"
        },
        "codegenome.includePatterns": {
          "type": "array",
          "default": [
            "**/*.{ts,tsx,js,jsx,php}"
          ],
          "description": "File patterns to include in analysis"
        },
        "codegenome.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules/**",
            "dist/**",
            "build/**",
            ".git/**"
          ],
          "description": "File patterns to exclude from analysis"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "node esbuild.js --production",
    "build": "node esbuild.js",
    "dev": "node esbuild.js --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@codegenome-x/core": "file:../core",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.25.12",
    "glob": "^10.5.0"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.56.0",
    "@typescript-eslint/typescript-estree": "^6.0.0",
    "hash-wasm": "^4.12.0",
    "minimatch": "^10.2.2",
    "typescript": "^5.9.3"
  }
}
